model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  clerkId       String    @unique
  email         String   
  username      String
  image         String?
  firstname     String
  lastname      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime  @updatedAt
  role  Role    @default(USER)
}

enum Role {
    USER
    ADMIN
}


